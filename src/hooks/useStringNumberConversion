import { useEffect, useState } from "react";

export const useStringNumberConversion = (input: string | number): string | number | null => {
  const [convertedValue, setConvertedValue] = useState<string | number | null>(null);

  useEffect(() => {
    if (typeof input === "string") {
      const parsed = Number(input);

      setConvertedValue(Number.isNaN(parsed) ? null : parsed);
    } else if (typeof input === "number") {
      setConvertedValue(input.toString());
    }
  }, [input]);

  return convertedValue;
};
